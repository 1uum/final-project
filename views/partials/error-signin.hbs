<div class="container error-container is-flex is-flex-direction-column is-align-items-center">
   {{#if todo_ok}}
      <div class="notification is-success mt-1">
         <button class="delete" onclick="this.parentElement.style.display='none'"></button>
         <span class="icon-text">
            <span class="icon">
               <ion-icon name="checkmark-circle"></ion-icon>
            </span>
            <span><strong>{{todo_ok}}</strong></span>
         </span>
      </div>
   {{/if}}
   {{#if error_user}}
      <div class="notification is-danger mt-1">
         <button class="delete" onclick="this.parentElement.style.display='none'"></button>
			<span class="icon-text">
            <span class="icon">
               <ion-icon name="warning"></ion-icon>
            </span>
            <span><strong>{{error_user}}</strong></span>
         </span>
      </div>
   {{/if}}
   {{#if error_email}}
      <div class="notification is-danger mt-1">
         <button class="delete" onclick="this.parentElement.style.display='none'"></button>
			<span class="icon-text">
            <span class="icon">
               <ion-icon name="warning"></ion-icon>
            </span>
            <span><strong>{{error_email}}</strong></span>
         </span>
      </div>
   {{/if}}
</div>